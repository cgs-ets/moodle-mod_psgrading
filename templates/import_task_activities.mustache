<div id="fitem_id_activitiesincourseselected" class="mb-3 row  fitem" >
    <div class="col-md-3 col-form-label d-flex pb-0 pe-md-0">
                <label id="id_activitiesincourseselected_label" class="d-inline word-break " for="id_activitiesincourseselected">
                    Choose one or more activities in the course selected
                </label>

        <div class="form-label-addon d-flex align-items-center align-self-start">

        </div>
    </div>
    <div class="col-md-9 d-flex flex-wrap align-items-start felement" data-fieldtype="select" >
            <input type="hidden" name="activitiesincourseselected" value="_qf__force_multiselect_submission">
			<select class=" form-control" name="activitiesincourseselected[]"  id="id_activitiesincourseselected" multiple size="{{size}}" data-initial-value="" data-cmids = "{{cmids}}">
				{{#activities}}
					<option value = "{{activityid}}">{{activityname}}</option>
				{{/activities}}
			</select>
        <div class="form-control-feedback invalid-feedback" id="id_error_activitiesincourseselected">

        </div>
    </div>
</div>
