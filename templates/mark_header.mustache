{{!
    @template mod_psgrading/mark_header
}}
<div class="psgrading-header">

    <!-- SELECTED STUDENT -->
    <div class="selected-student" data-userid="{{currstudent.id}}" data-username="{{currstudent.username}}">
        <img src="{{currstudent.profilephoto}}" class="round" /> <a href="{{currstudent.overviewurl}}"><span class="name">{{currstudent.fullname}}</span></a>
    </div>

    <div class="psgrading-header-right">

      <!-- TASK SELECTOR -->
      <div class="task-selector">
          {{#currstudent.othertasks.0}}
              <span class="selector-label">Task</span>
              <select class="task-select form-control">
                  {{#currstudent.othertasks}}
                      <option value="{{id}}"{{#iscurrent}} selected="selected"{{/iscurrent}} data-markurl="{{markurl}}">{{taskname}}</option>
                  {{/currstudent.othertasks}}
              </select>
          {{/currstudent.othertasks.0}}
      </div>

      <!-- GROUP SELECTOR -->
      <div class="group-selector">
          {{#groups.0}}
              <span class="selector-label">Group</span>
              <select class="group-select form-control">
                  <option value="0" data-markurl="{{baseurl}}">All groups</option>
                  {{#groups}}
                      <option value="{{id}}"{{#iscurrent}} selected="selected"{{/iscurrent}} data-markurl="{{markurl}}">{{name}}</option>
                  {{/groups}}
              </select>
          {{/groups.0}}
      </div>

      <!-- STUDENT SELECTOR -->
      <div class="student-selector">
          <a href="{{prevstudenturl}}"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
          <select class="student-select form-control">
              {{#students}}
                  <option value="{{id}}"{{#iscurrent}} selected="selected"{{/iscurrent}} data-markurl="{{markurl}}">{{fullnamereverse}}</option>
              {{/students}}
          </select>
          <a href="{{nextstudenturl}}"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
      </div>

    </div>
    
</div>
<div class="outcomes">
    <div class="heading">{{#str}}task:outcomes, mod_psgrading{{/str}}</div>
    {{{task.outcomes}}}
</div>