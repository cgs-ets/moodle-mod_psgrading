{{!
    @template mod_psgrading/reporting_modal_effort
}}
<div id="reporting-grademenu">  
  {{#iseffort}}
    <label data-value="0"><input type="radio" name="effort" value="0"> Not set</label>
    <label data-value="1" data-minimal="LP"><input type="radio" name="effort" value="1" {{#is1}}checked{{/is1}}> Limited Participation</label>
    <label data-value="2" data-minimal="NI"><input type="radio" name="effort" value="2" {{#is2}}checked{{/is2}}> Needs Improvement</label>
    <label data-value="3" data-minimal="A"><input type="radio" name="effort" value="3" {{#is3}}checked{{/is3}}> Acceptable</label>
    <label data-value="4" data-minimal="VG"><input type="radio" name="effort" value="4" {{#is4}}checked{{/is4}}> Very Good</label>
    <label data-value="5" data-minimal="E"><input type="radio" name="effort" value="5" {{#is5}}checked{{/is5}}> Excellent</label>
  {{/iseffort}} 
  {{#istext}}
    <textarea class="element-text">{{reflection}}</textarea>
    <div class="actions">
      <a class="save btn btn-primary">Save</a>
      <a class="cancel btn btn-secondary">Cancel</a>
    </div>
  {{/istext}}
</div>
