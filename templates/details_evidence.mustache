{{!
    @template mod_psgrading/details_evidence

    View for the evidence selector component.
}}
<div class="details-evidences">
    <div class="heading">{{#str}}task:evidence, mod_psgrading{{/str}}</div>
    <div class="body">
        <table class="table generaltable">
            <tbody>
                {{#task.evidences}}
                    <tr class="evidence" data-id="{{id}}">
                        <td class="cell">
                            <a class="link" target="evidence" href="{{url}}"><img src="{{icon}}" class="icon" role="presentation" aria-hidden="true"><span class="name">{{name}}</span></a>
                        </td>
                    </tr>
                {{/task.evidences}}
            </tbody>
        </table>
    </div>
</div>