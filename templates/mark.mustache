{{!
    @template mod_psgrading/view

    View template.
}}

<div class="mod_psgrading_mark">
    <div class="header">
        <div class="selected-student" data-userid="{{currstudent.id}}">
            <img src="{{currstudent.profilephoto}}" class="round" /> <span class="name">{{currstudent.fullname}}</span>
        </div>
        <div class="student-selector">
            <a href="{{prevstudenturl}}"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
            <select class="form-control">
                {{#students}}
                    <option value="{{id}}"{{#isselected}} selected="selected"{{/isselected}}>{{fullname}}</option>
                {{/students}}
            </select>
            <a href="{{nextstudenturl}}"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
        </div>
    </div>
    <div class="task loading" data-taskid="{{task.id}}">
        <div class="spinner"><div class="circle spin"></div></div>
    </div>
</div>