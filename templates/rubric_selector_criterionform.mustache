{{!
    @template mod_psgrading/rubric_selector_criterionform

    View for the rubric selector component.
}}
{{#criterions}}
    <ul class="tbl-tr {{#hidden}}criterion-hidden{{/hidden}}">
        <li class="tbl-col tbl-col-1 tbl-col-first">
            <textarea name="criterion" class="form-control">{{description}}</textarea>
        </li>
        <li class="tbl-col tbl-col-2">
            <div class="label">Good start</div>
            <textarea name="goodstart" class="form-control">{{level2}}</textarea>
        </li>
        <li class="tbl-col tbl-col-3">
            <div class="label">Making strides</div>
            <textarea name="makingstride" class="form-control">{{level3}}</textarea>
        </li>
        <li class="tbl-col tbl-col-4">
            <div class="label">Go run with it</div>
            <textarea name="gorunwithit" class="form-control">{{level4}}</textarea>
        </li>
        <li class="tbl-col tbl-col-5 tbl-col-last">
            <div>
                <select name="subject" class="form-control">
                    {{#subject.options}}
                        <option value="{{{val}}}" {{#sel}}selected{{/sel}}>{{txt}}</option>
                    {{/subject.options}}
                    {{^subject.options}}
                        {{! Default options }}
                        <option value="">Select</option>
                        <option value="English">English</option>
                        <option value="HAAS">HAAS</option>
                        <option value="Science">Science</option>
                        <option value="Technology">Technology</option>
                        <option value="Maths">Maths</option>
                        <option value="H&PE">H&amp;PE</option>
                        <option value="VisArts">VisArts</option>
                        <option value="Language">Language</option>
                        <option value="Music">Music</option>
                    {{/subject.options}}
                </select>
            </div>
            <div>
                <select name="weight" class="form-control">
                    <option value="">Select</option>
                    <option>5%</option>
                    <option>10%</option>
                    <option>15%</option>
                    <option>20%</option>
                    <option>25%</option>
                    <option>30%</option>
                    <option>35%</option>
                    <option>40%</option>
                    <option>45%</option>
                    <option>50%</option>
                    <option>55%</option>
                    <option>60%</option>
                    <option>65%</option>
                    <option>70%</option>
                    <option>75%</option>
                    <option>80%</option>
                    <option>85%</option>
                    <option>90%</option>
                    <option>95%</option>
                    <option>100%</option>
                </select>
            </div>
            <div>
                <div class="hidden-control">
                    <input name="hidden" type="checkbox" {{^hidden}}checked="true"{{/hidden}}/>
                    <span class="toggle"></span>
                    <span class="desc">{{#hidden}}Hidden from students{{/hidden}}{{^hidden}}Visible{{/hidden}}</span>
                </div>

                <a class="btn-delete" href="#"><i class="fa fa-trash fa-fw" aria-hidden="true"></i></a>
            </div>
        </li>
    </ul>
{{/criterions}}