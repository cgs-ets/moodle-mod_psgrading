<div id="fitem_id_tasksinselectedactivity" class="mb-3 row  fitem" >
    <div class="col-md-3 col-form-label d-flex pb-0 pe-md-0">
                <label id="id_tasksinselectedactivity_label" class="d-inline word-break " for="id_tasksinselectedactivity">
                    Choose one or more tasks to import
                </label>

        <div class="form-label-addon d-flex align-items-center align-self-start">

        </div>
    </div>
    <div class="col-md-9 d-flex flex-wrap align-items-start felement" data-fieldtype="select" >
            <input type="hidden" name="tasksinselectedactivity" value="_qf__force_multiselect_submission">
			<select class=" form-control" name="tasksinselectedactivity[]"  id="id_tasksinselectedactivity" multiple size="{{size}}" data-initial-value="">
				{{#tasks}}
					<option value = "{{id}}">{{taskname}}</option>
				{{/tasks}}
			</select>
        <div class="form-control-feedback invalid-feedback" id="id_error_tasksinselectedactivity">

        </div>
    </div>
</div>
