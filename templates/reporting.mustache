{{!
    @template mod_psgrading/reporting

    Reporting template.
}}
<div class="psgrading-reporting">
    {{#students}}
      <div class="reporting-row" data-username="{{user.username}}">
          <div class="student-info">
              <a href="#"><img src="{{user.profilephoto}}" class="round"/> <span class="name">{{user.lastname}}, {{user.firstname}}</span></a>
          </div>
          <div class="student-report-elements">
            {{#reportelements}}
              <a href="#" class="report-element" data-subjectarea="{{subjectarea}}" data-type="{{type}}" data-grade="{{grade}}">
                <div class="subjectgrade">{{subjectarea}} {{#grade}}({{minimal}}){{/grade}}</div>
                <div class="options-area"></div>
              </a>
            {{/reportelements}}
          </div>
      </div>
    {{/students}}
</div>
