{{!
    @template mod_psgrading/list_row

    Single row for the list template.
}}

<div class="classlist-row">
    <div class="column col-student" data-userid="{{currstudent.id}}">
        <a href="{{currstudent.overviewurl}}"><img src="{{currstudent.profilephoto}}" class="round" /> <span class="name">{{currstudent.lastname}}, {{currstudent.firstname}}</span></a>
    </div>
    
    <div class="column col-firstname col-hidden">
        {{currstudent.firstname}}
    </div>
    <div class="column col-lastname col-hidden">
        {{currstudent.lastname}}
    </div>
    
    {{#tasks}}
        <div class="column col-success {{^published}}not-published{{/published}} {{^released}}not-released{{/released}} {{#didnotsubmit}}dns{{/didnotsubmit}}" data-grade="{{success.grade}}">
            {{#published}}
                <a href="{{success.detailsurl}}" title="{{success.gradetip}}" data-toggle="tooltip">{{success.gradelang}}&nbsp;</a>
            {{/published}}
            {{^published}}
                <span title="{{success.gradetip}}" data-toggle="tooltip">{{success.gradelang}}&nbsp;</span>
            {{/published}}
        </div>
    {{/tasks}}
</div>