{{!
    @template mod_psgrading/rubric

    Rubric template.
}}

    <div class="psgrading-rubric">
        <div class="header">
            <div class="selected-student" data-userid="{{currstudent.id}}">
                <img src="{{currstudent.profilephoto}}" class="round" /> <span class="name">{{currstudent.fullname}}</span>
            </div>
            <div class="task-selector">
                {{#currstudent.othertasks.0}}
                    <select class="task-select form-control">
                        {{#currstudent.othertasks}}
                            <option value="{{id}}"{{#iscurrent}} selected="selected"{{/iscurrent}} data-rubricurl="{{rubricurl}}">{{taskname}}</option>
                        {{/currstudent.othertasks}}
                    </select>
                {{/currstudent.othertasks.0}}
            </div>
            <div class="student-selector">
                <a href="{{prevstudenturl}}"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                <select class="student-select form-control">
                    {{#students}}
                        <option value="{{id}}"{{#iscurrent}} selected="selected"{{/iscurrent}} data-rubricurl="{{rubricurl}}">{{fullname}}</option>
                    {{/students}}
                </select>
                <a href="{{nextstudenturl}}"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
            </div>
        </div>
        <div class="contents">
            {{>mod_psgrading/rubric_criterions}}
            <div class="rubric-engagement">
                <div class="heading">{{#str}}markform:engagement, mod_psgrading{{/str}}</div>
                {{gradeinfo.engagement}}
            </div>
            {{>mod_psgrading/rubric_evidence}}
        </div>
    </div>
